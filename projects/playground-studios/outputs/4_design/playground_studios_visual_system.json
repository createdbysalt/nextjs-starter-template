  "color_system": {
    "philosophy": "Neutral palette that serves as backdrop for portfolio. Color draws attention to work and CTAs, not decoration.",

    "palette": {
      "primary": {
        "black": {
          "hex": "#08090A",
          "rgb": "8, 9, 10",
          "use": "Primary text, dark backgrounds, footer"
        },
        "charcoal": {
          "hex": "#2B2B2B",
          "rgb": "43, 43, 43",
          "use": "Secondary dark, hover states on dark"
        },
        "grey": {
          "hex": "#7A7A7A",
          "rgb": "122, 122, 122",
          "use": "Muted text, borders, disabled states"
        },
        "off_white": {
          "hex": "#F4F4F2",
          "rgb": "244, 244, 242",
          "use": "Primary background, light sections"
        },
        "white": {
          "hex": "#FFFFFF",
          "rgb": "255, 255, 255",
          "use": "Cards, contrast sections, text on dark"
        }
      },
      "extended": {
        "light_grey": {
          "hex": "#E5E5E3",
          "rgb": "229, 229, 227",
          "use": "Subtle dividers, hover backgrounds"
        },
        "dark_grey": {
          "hex": "#1A1A1A",
          "rgb": "26, 26, 26",
          "use": "Dark section backgrounds, alternative to black"
        }
      }
    },

    "semantic_colors": {
      "text": {
        "primary": "#08090A",
        "secondary": "#2B2B2B",
        "muted": "#7A7A7A",
        "inverse": "#FFFFFF"
      },
      "background": {
        "primary": "#F4F4F2",
        "secondary": "#FFFFFF",
        "dark": "#08090A",
        "dark_alt": "#1A1A1A"
      },
      "border": {
        "default": "#E5E5E3",
        "subtle": "rgba(0,0,0,0.08)",
        "dark": "#2B2B2B"
      },
      "interactive": {
        "default": "#08090A",
        "hover": "#2B2B2B",
        "active": "#08090A",
        "focus_ring": "rgba(8,9,10,0.3)"
      }
    },

    "dark_mode_tokens": {
      "note": "For dark hero sections or if full dark mode implemented",
      "text_primary": "#FFFFFF",
      "text_secondary": "#F4F4F2",
      "text_muted": "#7A7A7A",
      "background_primary": "#08090A",
      "background_secondary": "#1A1A1A",
