    "accessibility": {
      "contrast_ratios": {
        "black_on_off_white": "16.5:1 (AAA)",
        "charcoal_on_off_white": "10.8:1 (AAA)",
        "grey_on_off_white": "4.0:1 (AA for large text only)",
        "white_on_black": "16.5:1 (AAA)"
      },
      "notes": [
        "Grey (#7A7A7A) fails AA for body text on light backgrounds - use only for large text/decorative",
        "All primary text combinations pass AAA",
        "Ensure interactive elements have sufficient contrast"
      ]
    }
