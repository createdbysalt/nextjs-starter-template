  "typography": {
    "philosophy": "Bold display type for headlines, clean sans-serif for body. High contrast in scale creates visual hierarchy without decoration.",

    "font_stack": {
      "display": {
        "primary_recommendation": "Neue Haas Grotesk Display",
        "alternatives": ["Helvetica Neue Bold Extended", "Monument Extended", "ABC Favorit Extended"],
        "webflow_fallback": "Inter or DM Sans (bold weights)",
        "characteristics": "Bold, extended or wide proportions for hero headlines",
        "note": "If budget allows, consider a distinctive display face. Monument Extended gives Gym Class energy."
      },
      "body": {
        "primary_recommendation": "Neue Haas Grotesk Text",
        "alternatives": ["Inter", "DM Sans", "Satoshi"],
        "webflow_native": "Inter is available on Webflow natively",
        "characteristics": "Clean, highly legible, neutral but not sterile"
      },
      "accent": {
        "optional": "Mono or code-style for metadata",
        "recommendations": ["JetBrains Mono", "IBM Plex Mono", "Space Mono"],
        "use_cases": "Project metadata, dates, technical details"
      }
    },

    "type_scale": {
      "desktop": {
        "hero": {
          "size": "72-96px",
          "weight": "700-800",
          "line_height": "1.0-1.1",
          "letter_spacing": "-0.02em to -0.03em",
          "use": "Homepage hero headline only"
        },
        "h1": {
          "size": "48-64px",
          "weight": "700",
          "line_height": "1.1-1.15",
          "letter_spacing": "-0.02em",
          "use": "Page titles, major section headers"
        },
        "h2": {
          "size": "32-40px",
          "weight": "600-700",
          "line_height": "1.2",
          "letter_spacing": "-0.01em",
          "use": "Section headings"
        },
        "h3": {
          "size": "24-28px",
          "weight": "600",
          "line_height": "1.3",
          "letter_spacing": "0",
          "use": "Subsection headings, card titles"
        },
        "h4": {
          "size": "18-20px",
          "weight": "600",
          "line_height": "1.4",
          "letter_spacing": "0",
          "use": "Labels, small headings"
        },
        "body_large": {
          "size": "20-22px",
          "weight": "400",
          "line_height": "1.6",
          "letter_spacing": "0",
          "use": "Intro paragraphs, feature descriptions"
        },
        "body": {
          "size": "16-18px",
          "weight": "400",
          "line_height": "1.6-1.7",
          "letter_spacing": "0",
          "use": "Main body copy"
        },
        "small": {
          "size": "14px",
          "weight": "400",
          "line_height": "1.5",
          "letter_spacing": "0",
          "use": "Captions, metadata, footer"
        },
        "micro": {
          "size": "12px",
          "weight": "500",
          "line_height": "1.4",
          "letter_spacing": "0.05em",
          "text_transform": "uppercase",
          "use": "Labels, tags, eyebrows"
        }
      },
      "mobile": {
        "hero": "48-56px",
        "h1": "36-42px",
        "h2": "28-32px",
        "h3": "22-24px",
        "h4": "18px",
        "body_large": "18px",
        "body": "16px",
        "small": "14px",
        "micro": "11px"
      }
    },

    "text_styles": {
      "hero_headline": {
        "font": "Display",
        "size": "hero scale",
        "weight": "700-800",
        "color": "text-primary or white (on dark)",
