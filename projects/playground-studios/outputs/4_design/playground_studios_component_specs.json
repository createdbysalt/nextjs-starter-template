  "global_components": {
    "loading_intro": {
      "purpose": "Create memorable first impression with DVTK-style animated intro",
      "inspiration": "DVTK (dvtk.us) ASCII matrix loading animation",
      "structure": {
        "container": "Full-viewport overlay, fixed position, z-index: 9999",
        "content": "Centered text animation area",
        "skip_hint": "Optional 'Click anywhere to skip' text (appears after 1s)"
      },
      "visual_elements": {
        "background": {
          "color": "#08090A (black)",
          "fullscreen": true
        },
        "text_animation": {
          "content": "'PLAYGROUND STUDIOS' or logo mark",
          "font": "Monospace for scramble effect (JetBrains Mono, Space Mono)",
          "size": "24-48px depending on viewport",
          "color": "#FFFFFF",
          "alignment": "center"
        },
        "character_matrix": {
          "type": "ASCII-style characters that scramble and resolve",
          "characters": ["→", "↓", "↑", "←", "/", "\\", "|", "-", "+", "P", "L", "A", "Y", "G", "R", "O", "U", "N", "D"],
          "animation": "Characters rapidly change, gradually locking into final text"
        }
      },
      "animation_sequence": {
        "phase_1": {
          "name": "scramble",
          "duration": "1.5s",
          "description": "Random characters fill the text positions, constantly changing"
        },
        "phase_2": {
          "name": "resolve",
          "duration": "1s",
          "description": "Characters progressively lock into correct letters from left to right or randomly"
        },
        "phase_3": {
          "name": "hold",
          "duration": "0.3s",
          "description": "Final text visible briefly"
        },
        "phase_4": {
          "name": "exit",
          "duration": "0.4s",
          "description": "Fade out or slide up to reveal homepage"
        }
      },
      "behavior": {
        "trigger": "Homepage load (first visit per session)",
        "skip": "Click/tap anywhere OR wait for animation to complete",
        "session_storage": "Set flag to skip on subsequent page loads in same session",
        "reduced_motion": "Show static logo, simple fade in (respect prefers-reduced-motion)"
      },
      "technical_implementation": {
        "approach": "GSAP + custom JavaScript",
        "steps": [
          "1. Create array of character positions",
          "2. Randomly assign characters to each position",
          "3. Use setInterval to scramble characters rapidly",
          "4. Progressively 'lock' characters to final values",
          "5. Animate exit and remove overlay"
        ],
        "code_reference": "See GSAP TextPlugin or custom scramble effect",
        "fallback": "Simple fade-in logo for browsers without JS"
      },
      "responsive": {
        "desktop": "Full effect with larger text",
        "tablet": "Slightly smaller text, same effect",
        "mobile": "Smaller text (20-32px), faster animation (2s total) for performance"
      },
      "accessibility": {
        "aria_live": "polite for announcing loading state",
        "skip_link": "Focusable skip button for keyboard users",
        "motion_preference": "Check prefers-reduced-motion and disable animation if true"
      }
    },

