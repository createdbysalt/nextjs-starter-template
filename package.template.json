{
  "name": "{{PROJECT_CODENAME}}",
  "version": "1.0.0",
  "description": "{{CLIENT_NAME}} website - Next.js + TypeScript + Tailwind",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "author": "SALT STUDIO",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "next.js",
    "react",
    "typescript",
    "tailwindcss",
    "{{INDUSTRY}}"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,css}\"",
    "validate": "pnpm lint && pnpm typecheck && pnpm build",
    "clean": "rm -rf .next node_modules",
    "clean:cache": "rm -rf .next && pnpm store prune"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "framer-motion": "^11.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid",
    "plugins": ["prettier-plugin-tailwindcss"]
  }
}
